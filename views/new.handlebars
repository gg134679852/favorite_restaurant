
<form action="/restaurants" method="POST">
<div class="container mt-3 w-50 p-3">
  <div class="row">
    <div class="col">
     <input type="text" placeholder="餐廳名稱" name="name">
       </div>
     <div class="col">
       <input type="text" placeholder="餐廳類型" name="category">
  </div>
  <div class="col mt-3">
    <input type="text" placeholder="餐廳地址" name="location">
  </div>
  <div class="col mt-3">
    <input type="text" placeholder="電話" name="phone">
  </div>
  
  <div class="col mt-3">
    <input type="text" placeholder="google地圖" name="google_map">
  </div>
  <div class="col mt-3">
    <input type="text" placeholder="圖片" name="image">
  </div>
  <div class="col mt-3">
    <textarea name="description"placeholder="輸入餐廳介紹..."></textarea>
    </div>
    <div class="col mt-3">
      <input type="number"  min="0" max="5" placeholder="評分" name="rating">
    </div>
   </div>
   <div class="mt-3">
    <button class="btn btn-outline-primary"type="submit">新增</button>
   </div>
  </div>
 </form>
