<form action="/restaurants/{{ restaurants._id }}/edit" method="POST">
  <div class="container mt-3 w-50 p-3">
    <div class="row">
      <div class="col">
        <input type="text" placeholder="餐廳名稱" name="name" value="{{ restaurants.name }}">
      </div>
      <div class="col">
        <input type="text" placeholder="餐廳類型" name="category"value="{{ restaurants.category }}">
      </div>
      <div class="col mt-3">
        <input type="text" placeholder="餐廳地址" name="location" value="{{ restaurants.location }}">
      </div>
      <div class="col mt-3">
        <input type="text" placeholder="電話" name="phone" value="{{ restaurants.phone }}">
      </div>
    
      <div class="col mt-3">
        <input type="text" placeholder="google地圖" name="google_map"value="{{ restaurants.google_map }}">
      </div>
      <div class="col mt-3">
        <input type="text" placeholder="圖片" name="image"value="{{ restaurants.image }}">
      </div>
      <div class="col mt-3">
        <textarea name="description" placeholder="輸入餐廳介紹..."
        >{{ restaurants.description}}</textarea>
      </div>
      <div class="col mt-3">
        <input type="number" min="0" max="5" placeholder="評分" name="rating" value="{{ restaurants.rating}}">
      </div>
    </div>
    <div class="d-flex justify-content-around mt-3">
      <button type="submit" class="btn btn-danger">Save</button>
      <a href="/" class="btn btn-danger">back</a>
    </div>
  </div>
</form>