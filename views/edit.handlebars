<form action="/restaurants/{{ restaurants._id }}?_method=PUT" method="POST">
  <div class="container mt-3 w-50 p-3">
    <div class="input-container" style="margin-left:230px;">
      <div class="input-group">
        <label>餐廳名稱:
        <input type="text" name="name" value="{{ restaurants.name }}">
        </label>
        </div>
      <div class="input-group">
        <label>餐廳類型:
        <input type="text" name="category"value="{{ restaurants.category }}">
        </label>
      </div>
      <div class="input-group">
        <label>餐廳地址:
        <input type="text"  name="location" value="{{ restaurants.location }}">
        </label>
      </div>
      <div class="input-group">
        <label>電話號碼:
        <input type="tel"  name="phone" value="{{ restaurants.phone }}"placeholder="01-1111-111">
        </label>
      </div>
      <div class="input-group">
        <label>google地圖:
        <input type="url" name="google_map"value="{{ restaurants.google_map }}">
        </label>
      </div>
      <div class="input-group">
        <label>圖片網址:
        <input type="url"  name="image"value="{{ restaurants.image }}">
        </label>
      </div>
      <div class="input-group" style="margin-right:69px;">
        <label>餐廳評分:
          <input type="number" min="0" max="5" name="rating" value="{{ restaurants.rating}}">
        </label>
      </div>
      <div class="form-floating" style="margin-right:230px;">
        <textarea class="form-control" name="description" placeholder="輸入餐廳介紹..."
        >{{ restaurants.description}}</textarea>
      </div>
    </div>
    <div class="d-flex justify-content-around mt-4">
      <button type="submit" class="btn btn-danger">儲存</button>
      <a href="/" class="btn btn-danger">back</a>
    </div>
  </div>
</form>