<form action="/restaurants/{{ restaurants._id }}?_method=PUT" method="POST">
  <div class="container mt-3 w-50 p-3">
    <div class="row align-items-center">
      <div class="col">
        <label>餐廳名稱:
        <input type="text" name="name" value="{{ restaurants.name }}">
        </label>
      </div>
      <div class="col">
        <label>餐廳類型:
        <input type="text" name="category"value="{{ restaurants.category }}">
        </label>
      </div>
      <div class="col">
        <label>餐廳地址:
        <input type="text"  name="location" value="{{ restaurants.location }}">
        </label>
      </div>
      <div class="col mt-3">
        <label>電話:
        <input type="text"  name="phone" value="{{ restaurants.phone }}">
        </label>
      </div>
    
      <div class="col mt-3">
        <label>google地圖:
        <input type="text" name="google_map"value="{{ restaurants.google_map }}">
        </label>
      </div>
      <div class="col mt-3">
        <label>圖片:
        <input type="text"  name="image"value="{{ restaurants.image }}">
        </label>
      </div>
      <div class="col mt-4">
        <textarea name="description" placeholder="輸入餐廳介紹..."
        >{{ restaurants.description}}</textarea>
      </div>
      <div class="col mt-3" style="margin-right:69px;">
        <label>評分:
        <input type="number" min="0" max="5"  name="rating" value="{{ restaurants.rating}}">
      </div>
      </label>
    </div>
    <div class="d-flex justify-content-around mt-3">
      <button type="submit" class="btn btn-danger">Save</button>
      <a href="/" class="btn btn-danger">back</a>
    </div>
  </div>
</form>